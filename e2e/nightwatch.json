{
  "src_folders": ["tests"],

  "webdriver": {
    "start_process": true,
    "server_path": "../node_modules/.bin/chromedriver",
    "port": 9515,
    "log_path": "./reports"
  },

  "test_settings": {
    "default": {
      "desiredCapabilities": {
        "browserName": "chrome",
        "chromeOptions": {
          "args": ["--headless"]
        }
      }
    }
  },

  "output_folder": "./reports",

  "screenshots": {
    "enabled": true,
    "on_failure": true,
    "on_error": true,
    "path": "./reports"
  }
}
